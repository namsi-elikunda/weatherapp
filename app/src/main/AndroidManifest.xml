<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.weatherapp">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Weatherapp"
        tools:targetApi="31">
        <activity
            android:name=".bottomWeatherSheet"
            android:exported="false"
            android:label="@string/title_activity_bottom_weather_sheet"
            android:theme="@style/Theme.Weatherapp" />
        <activity
            android:name=".currentWeatherscreen"
            android:exported="false"
            android:label="@string/title_activity_current_weatherscreen"
            android:theme="@style/Theme.Weatherapp" />
        <activity
            android:name=".Weatherscreen"
            android:exported="false"
            android:label="@string/title_activity_weatherscreen"
            android:theme="@style/Theme.Weatherapp" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Weatherapp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>